  "license": "BSL-1.1",
  "repository": {
    "type": "git",
    "url": "https://www.npmjs.com/package/@compr/contextengine-mcp"
  },
  "homepage": "https://www.npmjs.com/package/@compr/contextengine-mcp",
  "bugs": {
    "email": "yannick@compr.ch"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "!dist/test*",
    "defaults/",
    "skills/",
    "examples/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
